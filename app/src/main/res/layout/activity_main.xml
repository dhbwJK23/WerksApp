<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000068"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false">

        <!-- News Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/newsCard"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="30dp"
            android:layout_rowWeight="1"
            android:elevation="4dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/news" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Kantine Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/kantineCard"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="30dp"
            android:layout_rowWeight="1"
            android:elevation="4dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/kantine" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- JobbÃ¶rse Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/jobboerseCard"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="30dp"
            android:layout_rowWeight="1"
            android:elevation="4dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/jobboerse" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Parkplatz Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/parkplatzCard"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="30dp"
            android:layout_rowWeight="1"
            android:elevation="4dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/parkplatz" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Reisevorgaenge Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/reisevorgaengeCard"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:cardCornerRadius="30dp"
            android:layout_rowWeight="1"
            android:elevation="4dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/reisevorgaenge" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
